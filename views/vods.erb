<h1>vods</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Title</th>
      <th>URL</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
    <% @vods.each do |vod| %>
    <tr>
      <td><%= vod.id %></td>
      <td><%= vod.date %></td>
      <td><%= vod.title %></td>
      <td><a href="<%= vod.url %>">Link</a></td>
      <td>
        <form action="/vods/<%= vod.id %>" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="Delete">
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
